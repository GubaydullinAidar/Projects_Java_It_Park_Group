<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="300.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.102"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.itpark.onlineBanking.controllers.MainWindowController">
    <children>
        <SplitPane dividerPositions="0.35" layoutX="69.0" layoutY="52.0" prefHeight="375.0" prefWidth="600.0"
                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                   AnchorPane.topAnchor="0.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="298.0" prefWidth="206.0"
                                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <items>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                                    <children>
                                        <Label alignment="CENTER" contentDisplay="CENTER" text="Основной счет"
                                               textAlignment="CENTER" AnchorPane.leftAnchor="35.0"
                                               AnchorPane.topAnchor="40.0">
                                            <font>
                                                <Font name="System Bold" size="18.0"/>
                                            </font>
                                        </Label>
                                        <Button layoutX="64.0" layoutY="77.0" mnemonicParsing="false"
                                                onAction="#primaryTransaction" text="Подробнее"
                                                AnchorPane.topAnchor="70.0">
                                            <font>
                                                <Font size="11.0"/>
                                            </font>
                                        </Button>
                                        <Button layoutX="8.0" layoutY="106.0" mnemonicParsing="false"
                                                onAction="#getPrimaryBalance" text="Баланс" AnchorPane.leftAnchor="10.0"
                                                AnchorPane.topAnchor="105.0"/>
                                        <Label fx:id="primaryBalance" layoutX="79.0" layoutY="109.0" prefHeight="20.0"
                                               prefWidth="118.0" AnchorPane.leftAnchor="80.0"
                                               AnchorPane.topAnchor="108.0">
                                            <font>
                                                <Font size="14.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </AnchorPane>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                                    <children>
                                        <Label layoutX="8.0" layoutY="33.0" text="Сберегательный счет"
                                               AnchorPane.topAnchor="40.0">
                                            <font>
                                                <Font name="System Bold" size="18.0"/>
                                            </font>
                                        </Label>
                                        <Button layoutX="65.0" layoutY="63.0" mnemonicParsing="false"
                                                onAction="#savingsTransaction" text="Подробнее"
                                                AnchorPane.topAnchor="70.0">
                                            <font>
                                                <Font size="11.0"/>
                                            </font>
                                        </Button>
                                        <Button layoutY="93.0" mnemonicParsing="false" onAction="#getSavingsBalance"
                                                text="Баланс" AnchorPane.leftAnchor="10.0"
                                                AnchorPane.topAnchor="105.0"/>
                                        <Label fx:id="savingsBalance" layoutX="80.0" layoutY="95.0" prefHeight="20.0"
                                               prefWidth="118.0" AnchorPane.leftAnchor="80.0"
                                               AnchorPane.topAnchor="108.0">
                                            <font>
                                                <Font size="14.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </AnchorPane>
                            </items>
                        </SplitPane>
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="298.0" prefWidth="268.0">
                    <children>
                        <TableView fx:id="tableTransactions" layoutY="20.0" prefHeight="286.0" prefWidth="371.0"
                                   AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="0.0"
                                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="25.0">
                            <columns>
                                <TableColumn fx:id="date" prefWidth="121.0" text="Дата"/>
                                <TableColumn fx:id="description" prefWidth="119.0" text="Описание"/>
                                <TableColumn fx:id="status" prefWidth="121.0" text="Статус"/>
                                <TableColumn fx:id="amount" prefWidth="121.0" text="Сумма"/>
                                <TableColumn fx:id="availableBalance" prefWidth="121.0" text="Остаток"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                        <Button layoutX="295.0" layoutY="343.0" mnemonicParsing="false" onAction="#refillDebit"
                                text="Пополнение/Снятие" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0"/>
                        <Label text="Подробнее о счете" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="0.0">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
